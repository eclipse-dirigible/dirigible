						<version>${maven-surefire-plugin.version}</version>
						<configuration>
							<systemPropertyVariables>
								<redis.value>true</redis.value>
							</systemPropertyVariables>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>etcd-test</id>
			<activation>
