						<artifactId>maven-surefire-plugin</artifactId>
						<version>${maven-surefire-plugin.version}</version>
						<configuration>
							<systemPropertyVariables>
								<elastic.value>true</elastic.value>
							</systemPropertyVariables>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>redis-test</id>
			<activation>
				<property>
					<name>redis-test</name>
				</property>
			</activation>
			<build>
				<plugins>
