{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "declaration": true,
    "types": [
      "./types"
    ],
    "paths": {
      "sdk/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
