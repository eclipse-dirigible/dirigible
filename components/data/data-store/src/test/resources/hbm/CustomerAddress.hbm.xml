<hibernate-mapping>
	<class entity-name="CustomerAddress" table="CUSTOMER_ADDRESSES">

    <!-- Primary Key -->
    <id name="id" column="ADDRESS_ID" type="long">
        <generator class="native"/>
    </id>

    <!-- Basic Properties -->
    <property name="city" column="ADDRESS_CITY" type="string"/>

    <many-to-one name="customer" 
                 entity-name="Customer" 
                 column="CUSTOMER_ID" 
                 not-null="true"
                 lazy="proxy"
                 cascade="none"/>
    
</class>

</hibernate-mapping>