exports.getPerspective = function() {
	return {
#if($perspectiveName)
		'name': '${perspectiveName}',
#elseif($brand)
		'name': '${brand}',
#else
		'name': '${projectName}',
#end
#if($perspectiveIcon)
		'image': '${perspectiveIcon}',
#else
		'image': 'life-ring',
#end
		'link': '/services/v4/web/${projectName}/ui/${perspectiveName}/index.html',
#if($perspectiveOrder)
		'order': ${perspectiveOrder},
#else
		'order': 999
#end
	};
};
